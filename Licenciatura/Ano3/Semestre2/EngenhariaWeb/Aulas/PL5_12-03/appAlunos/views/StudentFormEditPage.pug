extends layout

block content 
    .w3-card-4
    header.w3-container.w3-purple
        h2 Student Form

    form.w3-container(method="POST")
        fieldset
            legend Metadata
            label Id
            input.w3-input.w3-round(type="text", name="id", readonly, value=a.id)
            label Name
            input.w3-input.w3-round(type="text", name="nome", value=a.nome)
            label Git
            input.w3-input.w3-round(type="text", name="gitlink", value=a.gitlink)

        fieldset
            legend TPC
            - for (var i = 1; i < 9; i++)
                - var tpc = "tpc" + i
                - if (tpc in a)
                    input.w3-check(type="checkbox", name=`tpc${i}`, value="1", checked)
                    label TPC#{i}
                - else
                    input.w3-check(type="checkbox", name=`tpc${i}`, value="1")
                    label TPC#{i}
        
        br
        button.w3-btn.w3-purple.w3-mb-2(type="submit") Register

    footer.w3-container.w3-purple
        h5 Generated by EngWeb2023 in #{d} - #[a(href="/") Return]
