            <div class="btn-group" role="group">
                <a role="button" class="btn btn-primary" asp-controller="Leiloes" asp-action="FazerProposta"> Fazer Proposta</a>
            </div>
        </td>
        </tr>
        }
    }
    </tbody>
    </table>
</div>
