@model List<UsersModel>
@{
    ViewData["Title"] = "User";
}

<div class="text-center">

    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary" role="button" asp-controller="Leiloes" asp-action="CriarLeilao"> Adicionar Leilão </a>
    </div>

