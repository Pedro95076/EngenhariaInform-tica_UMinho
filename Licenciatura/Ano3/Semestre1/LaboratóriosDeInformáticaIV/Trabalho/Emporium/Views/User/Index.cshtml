        <td>@users.Name</td>
        <td>@users.Email</td>
        <td>@users.Password</td>
        <td>
            <div class="btn-group" role="group">
                <a role="button" class="btn btn-primary" asp-route-id="@users.Id" asp-controller="Users" asp-action="Criar"> Fazer Proposta</a>
            </div>
        </td>
        </tr>
        <tr>
        <th scope="row">2</th>
        <td>Jacob</td>
        <td>Thornton</td>
        <td>fat</td>
